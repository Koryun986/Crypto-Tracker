<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bg"
    android:orientation="vertical"
    tools:context=".CurrencyActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/blue_bg"
            app:menu="@menu/tool_bar"
            app:titleTextColor="@color/white">
            <TextView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_arrow_back_24"
                />
            <ImageView
                android:id="@+id/coin_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:queryHint="Search..."/>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/currency_activity_progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


    <TextView
        android:id="@+id/coin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter"
        android:textSize="38sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">
        <TextView
            android:id="@+id/chart_1d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_price"
            android:background="@drawable/chart_days_btn_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="1D"/>
        <TextView
            android:id="@+id/chart_7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_days_btn_bg"
            android:textColor="@color/blue_price"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="7D"/>
        <TextView
            android:id="@+id/chart_1m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_days_btn_bg"
            android:textColor="@color/orange"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:text="1M"/>
        <TextView
            android:id="@+id/chart_3m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_days_btn_bg"
            android:textColor="@color/blue_price"
            android:padding="5dp"
            android:text="3M"/>
    </LinearLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginBottom="168dp"
        />


</LinearLayout>